<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.association :author, label_method: :email, label_value: :id %>
    <%= f.association :teacher, label_method: :email, label_value: :id %>
    <%= f.input :lessons_count %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
